@model CalculatorModel

<h2>Calculator</h2>

@using (Html.BeginForm("Calculate", "Calculator", FormMethod.Post))
{
    <div>
        Operand 1: <input asp-for="Operand1" />
    </div>
    <div>
        Operator:
        <select asp-for="Operator">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
    </div>
    <div>
        Operand 2: <input asp-for="Operand2" />
    </div>
    <button type="submit">Calculate</button>
}

@if (Model.Result != 0)
{
    <div>
        Result: @Model.Result
    </div>
}

<span asp-validation-for="Operand2"></span>
<span asp-validation-for="Operator"></span>
