{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "module": "commonJS"
  },
  "include": [
    "./src/*.ts",
    "src/components/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc",
    "./src/*"
  ],
  "exclude": ["node_modules"]
}
